<script>
  function openNav() {
    document.getElementById("mySidebar").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px";
  }

  function closeNav() {
    document.getElementById("mySidebar").style.width = "0";
    document.getElementById("main").style.marginLeft = "0";
  }

  // Toggle category on click
  document.querySelectorAll(".catoptnbtn").forEach((button) => {
    button.addEventListener("click", () => {
      const category = button.nextElementSibling;
      category.classList.toggle("show");
      const sign = button.querySelector(".catoptnsign");
      sign.textContent = sign.textContent === "+" ? "-" : "+";
    });
  });

  document.addEventListener("click", function (e) {
    if (e.target.classList.contains("add-to-cart-btn")) {
      const productId = parseInt(e.target.getAttribute("data-id"));
      addToCart(productId);
    } else if (e.target.classList.contains("remove-btn")) {
      const productId = parseInt(e.target.getAttribute("data-id"));
      removeFromCart(productId);
    } else if (e.target.id === "cart-icon") {
      cartSidebar.classList.toggle("open");
    } else if (e.target.id === "close-cart") {
      cartSidebar.classList.remove("open");
    } else if (e.target.id === "checkout-btn") {
      alert("Proceed to checkout");
    }
  });
</script>
