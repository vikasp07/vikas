<div class="row mt-3">
  <div class="col-sm-8 offset-sm-2 px-3">
    <h3 class="my-2">Edit your item</h3>
    <form
      method="post"
      action="/vks/<%= item._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label"><b>Name</b></label>
        <input
          type="text"
          class="form-control"
          name="item[title]"
          value="<%= item.name %>"
          required
        />
        <div class="valid-feedback">Name looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"><b>Description</b></label>
        <textarea
          type="text"
          class="form-control"
          name="item[description]"
          required
        >
<%= item.description %></textarea
        >
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <p><b>Original item Image</b></p>
        <img class="edit-img" src="<%= item.image %>" alt="" />
      </div>

      <!-- <div class="mb-3">
        <label for="image" class="form-label"><b>Upload New Image</b></label>
        <input type="file" class="form-control" name="item[image]" />
      </div> -->
      <div class="mb-3"></div>
        <label for="title" class="form-label"><b>Info</b></label>
        <input
          type="text"
          class="form-control"
          name="item[ingo]"
          value="<%= item.info %>"
          required
        />
        <div class="valid-feedback">Name looks good!</div>
      </div>

      <div class="mb-3"></div>
        <label for="title" class="form-label"><b>Category</b></label>
        <input
          type="text"
          class="form-control"
          name="item[category]"
          value="<%= item.category %>"
          required
        />
        <div class="valid-feedback">Name looks good!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label"><b>Price</b></label>
          <input
            type="number"
            class="form-control"
            name="item[price]"
            value="<%= item.price %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label"><b>MRP</b></label>
            <input
              type="number"
              class="form-control"
              name="item[price]"
              value="<%= item.mrp %>"
              required
            />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
        </div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
      <br /><br /><br />
    </form>
  </div>
</div>
